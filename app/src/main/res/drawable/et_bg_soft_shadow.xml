<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Soft wide shadow -->
    <item android:left="2dp" android:top="5dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Near subtle shadow -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#26000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Foreground input box: white fill + thin black border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <stroke android:width="1dp" android:color="#FF000000" />
            <corners android:radius="18dp" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>
</layer-list>


