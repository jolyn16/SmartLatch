<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow layer -->
    <item android:left="2dp" android:top="3dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <stroke android:width="2dp" android:color="#DDDDDD" />
            <corners android:radius="14dp" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>
</layer-list>


