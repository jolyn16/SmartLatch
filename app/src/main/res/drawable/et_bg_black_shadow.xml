<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Soft far shadow (wider, lighter) -->
    <item android:left="2dp" android:top="6dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Near shadow (darker, closer) -->
    <item android:left="1dp" android:top="3dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Foreground input box: white fill + black border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <stroke android:width="1dp" android:color="#000000" />
            <corners android:radius="18dp" />
            <padding android:left="14dp" android:top="12dp" android:right="14dp" android:bottom="12dp" />
        </shape>
    </item>
</layer-list>


